<?xml version="1.0" encoding="utf-8"?>

<!--********************************************************************************************************

Everytime you create a new party, a new button with button.txt = partyname has to be created
the buttons all get added to the recyclerview in the all_partys_layout

********************************************************************************************************-->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">



    <Button
        android:id="@+id/button_with_partyname"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="party1"
        android:textAlignment="viewStart"
        android:textColor="@color/blueSecond"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textview_substitute_with_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:elevation="100dp"
        android:text="Time"
        android:drawablePadding="5dp"
        android:drawableEnd="@drawable/time"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_substitute_with_location"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_marginTop="8dp"
        android:drawablePadding="5dp"
        android:drawableEnd="@drawable/location"
        android:id="@+id/textview_substitute_with_location"
        android:elevation="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Location"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262" />

</androidx.constraintlayout.widget.ConstraintLayout>